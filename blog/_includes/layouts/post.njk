---
layout: layouts/base.njk
---

<article>
	<section>
		<h1>{{ title }}</h1>
		<p>
			<time datetime="{{ page.date | dateFilter }}">{{ page.date | readableDate }}</time>
			
			{% if tags %}
				&nbsp;·&nbsp;
				{% for tag in tags %}
					{% if tag !== "learning-log" %}
						<a href="/tags/{{ tag | slugify }}/">#{{ tag }}</a>
					{% endif %}
				{% endfor %}
			{% endif %}
		</p>
	</section>

	<div>
		{{ content | safe }}
	</div>

	{% if previousPost or nextPost %}
		<nav style="margin-top: 40px; padding-top: 20px; border-top: 1px solid #e5e7eb; display: flex; justify-content: space-between; gap: 20px;">
			{% if previousPost %}
				<a href="{{ previousPost.url | url }}" style="flex: 1;">← {{ previousPost.data.title }}</a>
			{% endif %}
			{% if nextPost %}
				<a href="{{ nextPost.url | url }}" style="flex: 1; text-align: right;">{{ nextPost.data.title }} →</a>
			{% endif %}
		</nav>
	{% endif %}
</article>

<p style="margin-top: 40px;">
	<a href="{{ '/learning-log/' | url }}">← Back to learning log</a>
</p>
